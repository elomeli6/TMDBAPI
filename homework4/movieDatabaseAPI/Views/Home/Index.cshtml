<!-- We are going to pass TMDB Enum list since asp.net mvc views are strongly type.
    this means that they designed to work with a specific model
-->
@model IEnumerable<TMDBMovie>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Search for TMDB Movies</h1>
    
</div>

<!DOCTYPE html>

<html lang="en"--> <!-- root of document -->
    <head> <!-- the head contains meta information about the document as well as any links to external resources -->
        <meta charset="utf-8"> <!-- specifies character encoding -->
        <meta name="viewport" content="width=device-width, initial-scale=1 "> <!--configures page to be responsive to different devices. "width=device-width -- scale content to widht of device-width -->
        <title>Search for TMDB Movies</title>
         <!-- Bootstrap 5 CSS -->
        <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css'>
        <!-- Font Awesome CSS for search icon-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    </head>
    <body>
      <!-- Actual search box -->
        <div class="input-group rounded">
            <input type="search" id="searchQuery" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
            <button type="button" id="searchButton" class="btn btn-primary" data-mdb-ripple-init>
                 <i class="fas fa-search"></i>
         </button>
        </div>
        <div>
            <div class="container mt-4">
               <div class="row row-cols-1 row-cols-md-3 g-4" id="movieResults">
                   @*movie cards should display here *@    
            </div>
        </div>

<template id="movieCardsTemplate">
    <div class="card" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="">
                <img class="card-img-top" id="poster" src="" alt="">
                <div class="card-body">
                    <h5 class="card-title" id="cardTitle"></h5>
                    <p class="card-text" id="releaseDate"><small class="text-muted"></small></p>
                    <p class="card-text" id="overview"></p>
                       
                </div>
        </div>
    <!-- Modal -->
    <div class="modal fade" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                    <div class="modal-content rounded-0">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalTitle"></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <img id="modalBackdrop" class="img-fluid mb-3" src="" alt="Movie Backdrop">
                            <p id="modalReleaseDate"></p>
                            <p id="modalOverview"></p>
                            <p id="modalGenres"></p>
                            <p id="modalRevenue"></p>
                            <p id="modalCast"></p>
                            <p id="modalPopularity"></p>

                            <p id="modalFirstCast"></p>
                            <p id="modalSecondCast"></p>
                            <p id="modalThirdCast"></p>

                            <ul class="list-group">
                                <li class="list-group-item" id="role1">missing</li>
                                <li class="list-group-item" id="role2">missing</li>
                                <li class="list-group-item" id="role2">n/a</li>
                            </ul>


                        </div>
                        
                    </div>
                </div>
            </div>
</template>


    </body>
</html>


@section Scripts {
    <script type="text/javascript" src="~/js/site.js"></script>
}
